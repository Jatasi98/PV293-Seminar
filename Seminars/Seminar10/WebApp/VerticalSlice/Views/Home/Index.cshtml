@model HomeIndexModel

@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<section class="py-5 bg-light border rounded-3 mb-4">
    <div class="container py-4">
        <div class="row align-items-center g-4">
            <div class="col-12 col-lg-7">
                <h1 class="display-5 fw-bold mb-3">Discover products you’ll love</h1>
                <p class="lead text-muted mb-4">Fresh deals, fast shipping, and simple checkout.</p>
                <div class="d-flex gap-2">
                    <a class="btn btn-primary btn-lg" asp-controller="GetCatalog" asp-action="Index">
                        <i class="bi bi-bag"></i> Shop now
                    </a>
                    <a class="btn btn-outline-secondary btn-lg" asp-controller="GetSearch" asp-action="Index">
                        <i class="bi bi-search"></i> Search products
                    </a>
                </div>
            </div>
            <div class="col-12 col-lg-5">
                <div class="ratio ratio-16x9 bg-white border rounded d-flex align-items-center justify-content-center shadow-sm">
                    <span class="text-muted">Hero image / promo banner</span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container mb-5">
    <div class="row g-4">
        <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-truck fs-2 text-primary"></i>
                    <div>
                        <h3 class="h5 mb-1">Fast Shipping</h3>
                        <p class="mb-0 text-muted">Orders ship within 24–48 hours with tracking.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-shield-check fs-2 text-primary"></i>
                    <div>
                        <h3 class="h5 mb-1">Secure Checkout</h3>
                        <p class="mb-0 text-muted">Your data stays safe with us.</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex align-items-start gap-3">
                    <i class="bi bi-arrow-repeat fs-2 text-primary"></i>
                    <div>
                        <h3 class="h5 mb-1">Easy Returns</h3>
                        <p class="mb-0 text-muted">Changed your mind? No problem.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="container mb-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="h4 mb-0">Popular categories</h2>
        <a class="btn btn-sm btn-outline-secondary" asp-controller="GetCatalog" asp-action="Index">View all</a>
    </div>
    <div class="row g-3">
        @foreach (var c in Model.PopularCategories)
        {
            <div class="col-6 col-md-3">
                <a class="card text-decoration-none h-100 shadow-sm"
                   asp-controller="GetCatalog" asp-action="Index" asp-route-CategoryId="@c.Id">
                    <div class="ratio ratio-1x1 bg-light d-flex align-items-center justify-content-center">
                        <img src="https://placehold.co/400"
                             alt="No image available"
                             class="img-fluid object-fit-cover w-100 h-100 opacity-75" />
                    </div>
                    <div class="card-body">
                        <div class="fw-semibold">@c.Name</div>
                        @if (!string.IsNullOrWhiteSpace(c.Description))
                        {
                            <div class="small text-muted">@c.Description</div>
                        }
                    </div>
                </a>
            </div>
        }
    </div>
</section>

<section class="container mb-5">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h2 class="h4 mb-0">Featured products</h2>
        <a class="btn btn-sm btn-outline-secondary" asp-controller="GetCatalog" asp-action="Index">Browse all</a>
    </div>

    @if (!Model.FeaturedProducts.Any())
    {
        <div class="alert alert-info">No products yet. Add some to the catalog.</div>
    }
    else
    {
        <div class="row g-3">
            @foreach (var p in Model.FeaturedProducts)
            {
                <div class="col-12 col-sm-6 col-md-3">
                    <div class="card h-100 shadow-sm">
                        <div class="ratio ratio-1x1 bg-light d-flex align-items-center justify-content-center">
                            <img src="https://placehold.co/400"
                                 alt="No image available"
                                 class="img-fluid object-fit-cover w-100 h-100 opacity-75" />
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h3 class="h6">
                                <a class="text-decoration-none"
                                   asp-controller="ProductDetails" asp-action="Details" asp-route-id="@p.Id">
                                    @p.Name
                                </a>
                            </h3>
                            <div class="fw-semibold mb-3">@p.Price.ToString("C")</div>
                            <div class="mt-auto d-flex gap-2">
                                <a class="btn btn-sm btn-outline-secondary flex-fill"
                                   asp-controller="ProductDetails" asp-action="Details" asp-route-id="@p.Id">
                                    Details
                                </a>
                                <form class="flex-fill" asp-controller="AddCartItem" asp-action="Add" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@p.Id" />
                                    <input type="hidden" name="qty" value="1" />
                                    <button type="submit" class="btn btn-sm btn-primary w-100">
                                        <i class="bi bi-bag-plus"></i> Add
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</section>

<section class="container mb-5">
    <div class="p-4 p-md-5 bg-light border rounded-3">
        <div class="row align-items-center g-3">
            <div class="col-md-7">
                <h2 class="h4 mb-1">Save 10% on your first order</h2>
                <p class="text-muted mb-0">Sign up for our newsletter to receive exclusive offers.</p>
            </div>
            <div class="col-md-5">
                <form class="d-flex gap-2">
                    <input type="email" class="form-control" placeholder="Your email" />
                    <button class="btn btn-primary" type="button">Subscribe</button>
                </form>
            </div>
        </div>
    </div>
</section>
