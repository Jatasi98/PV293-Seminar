@model IEnumerable<DAL.Entities.Category>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Categories";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">Categories</h1>
        <a class="btn btn-primary"
           asp-area="Admin" asp-controller="Categories" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Add Category
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No categories yet. Create the first one.
        </div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px;">Id</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th class="text-end" style="width:220px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td class="text-muted">#@c.Id</td>
                            <td class="fw-semibold">@c.Name</td>
                            <td class="text-muted">@c.Description</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-area="Admin" asp-controller="Categories" asp-action="Details" asp-route-id="@c.Id">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@c.Id">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger"
                                       asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@c.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
