@model DAL.Entities.Product
@{
    Layout = "_Layout";
    ViewData["Title"] = "Product Details";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Products" asp-action="Index">Products</a></li>
            <li class="breadcrumb-item active" aria-current="page">Details</li>
        </ol>
    </nav>

    <div class="card shadow-sm">
        <div class="card-header"><h1 class="h5 mb-0">Product Details</h1></div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Id</dt>
                <dd class="col-sm-9">@Model.Id</dd>

                <dt class="col-sm-3 text-muted">Name</dt>
                <dd class="col-sm-9 fw-semibold">@Model.Name</dd>

                <dt class="col-sm-3 text-muted">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3 text-muted">Category</dt>
                <dd class="col-sm-9">@((Model.Category != null) ? Model.Category.Name : "—")</dd>

                <dt class="col-sm-3 text-muted">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>
            </dl>
        </div>
        <div class="card-footer d-flex gap-2">
            <a class="btn btn-outline-primary"
               asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@Model.Id">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a class="btn btn-outline-secondary"
               asp-area="Admin" asp-controller="Products" asp-action="Index">
                Back to list
            </a>
        </div>
    </div>
</div>
