@model IEnumerable<DAL.Entities.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">Products</h1>
        <a class="btn btn-primary" asp-area="Admin" asp-controller="Products" asp-action="Create">
            <i class="bi bi-plus-lg"></i> Create Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">No products yet.</div>
    }
    else
    {
        <div class="table-responsive shadow-sm">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th style="width:80px;">Id</th>
                        <th>Name</th>
                        <th class="text-end" style="width:160px;">Price</th>
                        <th style="width:220px;">Category</th>
                        <th class="text-end" style="width:260px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td class="text-muted">#@p.Id</td>
                            <td class="fw-semibold">@p.Name</td>
                            <td class="text-end">@p.Price.ToString("C")</td>
                            <td>@(p.Category != null ? p.Category.Name : "—")</td>
                            <td class="text-end">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-sm btn-outline-secondary"
                                       asp-area="Admin" asp-controller="Products" asp-action="Details" asp-route-id="@p.Id">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a class="btn btn-sm btn-outline-primary"
                                       asp-area="Admin" asp-controller="Products" asp-action="Edit" asp-route-id="@p.Id">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a class="btn btn-sm btn-outline-danger"
                                       asp-area="Admin" asp-controller="Products" asp-action="Delete" asp-route-id="@p.Id">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
