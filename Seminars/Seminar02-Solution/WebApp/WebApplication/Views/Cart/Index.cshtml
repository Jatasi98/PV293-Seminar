@using PV293WebApplication.Models
@model CartViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Your Cart";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">Your Cart</h1>
        <a class="btn btn-outline-secondary" asp-controller="Catalog" asp-action="Index">
            <i class="bi bi-shop"></i> Continue shopping
        </a>
    </div>

    @if (TempData["CartMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-1"></i> @TempData["CartMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (!Model.Items.Any())
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="bi bi-bag me-2"></i>
            <div>Your cart is empty.</div>
        </div>
        <a class="btn btn-primary" asp-controller="Catalog" asp-action="Index">
            <i class="bi bi-bag-plus"></i> Shop products
        </a>
    }
    else
    {
        <div class="card shadow-sm mb-3">
            <div class="card-body d-flex justify-content-between align-items-center flex-wrap gap-2">
                <div>
                    <span class="me-3">Items: <strong>@Model.TotalQuantity</strong></span>
                    <span>Subtotal: <strong>@Model.Subtotal.ToString("C")</strong></span>
                </div>
                <form asp-action="Clear" method="post" class="m-0">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger">
                        <i class="bi bi-trash"></i> Clear cart
                    </button>
                </form>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Product</th>
                        <th class="text-end" style="width:140px;">Unit Price</th>
                        <th class="text-center" style="width:160px;">Qty</th>
                        <th class="text-end" style="width:160px;">Line Total</th>
                        <th class="text-end" style="width:120px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td class="fw-semibold">@item.Product.Name</td>
                            <td class="text-end">@item.UnitPrice.ToString("C")</td>
                            <td class="text-center">
                                <form asp-action="Update" method="post" class="d-inline-flex align-items-center gap-2">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <input type="number" name="qty" value="@item.Quantity" min="0"
                                           class="form-control form-control-sm text-center" style="width:80px;" />
                                    <button type="submit" class="btn btn-sm btn-outline-primary">
                                        Update
                                    </button>
                                </form>
                            </td>
                            <td class="text-end">@item.TotalPrice.ToString("C")</td>
                            <td class="text-end">
                                <form asp-action="Remove" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@item.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                        <i class="bi bi-x-lg"></i> Remove
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="3" class="text-end">Subtotal:</td>
                        <td class="text-end fw-semibold">@Model.Subtotal.ToString("C")</td>
                        <td></td>
                    </tr>
                    <tr>
                        <td colspan="3" class="text-end">Shipping:</td>
                        <td class="text-end">@Model.Shipping.ToString("C")</td>
                        <td></td>
                    </tr>
                    <tr class="table-active">
                        <td colspan="3" class="text-end fw-bold">Total:</td>
                        <td class="text-end fw-bold">@Model.Total.ToString("C")</td>
                        <td></td>
                    </tr>
                </tfoot>
            </table>
        </div>

        <div class="d-flex justify-content-end mt-3">
            <a asp-controller="Checkout" asp-action="Index" class="btn btn-primary btn-lg">
                <i class="bi bi-bag-check"></i> Proceed to checkout
            </a>
        </div>
    }
</div>
