@model OrderViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = $"Order #{Model.Id}";
}

<nav aria-label="breadcrumb" class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">My Orders</a></li>
        <li class="breadcrumb-item active" aria-current="page">#@Model.Id</li>
    </ol>
</nav>

<div class="d-flex align-items-center justify-content-between mb-2">
    <h1 class="h4 mb-0">Order #@Model.Id</h1>
</div>

<div class="row g-4">
    <div class="col-12 col-lg-4">
        <div class="card shadow-sm h-100">
            <div class="card-header">
                <i class="bi bi-geo-alt"></i> Shipping
            </div>
            <div class="card-body">
                <div class="fw-semibold">@Model.FullName</div>
                <div>
                    @Model.Address1@if (!string.IsNullOrWhiteSpace(Model.Address2)) {
                    <text>, @Model.Address2</text>
                                        }
                </div>
                <div>@Model.City, @Model.Zip</div>
                <div>@Model.Country</div>
            </div>
        </div>
    </div>

    <div class="col-12 col-lg-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <i class="bi bi-bag-check"></i> Items
            </div>
            <div class="card-body">
                @if (Model.Items == null || !Model.Items.Any())
                {
                    <div class="alert alert-warning mb-0" role="alert">
                        No items in this order.
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center" style="width:120px;">Qty</th>
                                    <th class="text-end" style="width:160px;">Unit</th>
                                    <th class="text-end" style="width:160px;">Line</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var i in Model.Items)
                                {
                                    <tr>
                                        <td>@i.ProductName</td>
                                        <td class="text-center">@i.Quantity</td>
                                        <td class="text-end">@i.UnitPrice.ToString("C")</td>
                                        <td class="text-end">@(@i.UnitPrice* @i.Quantity).ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                            <tfoot>
                                <tr>
                                    <td colspan="3" class="text-end fw-semibold">Total:</td>
                                    <td class="text-end fw-bold">@Model.Total.ToString("C")</td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="mt-4 d-flex gap-2">
    <a class="btn btn-outline-secondary" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Back to my orders
    </a>
    <a class="btn btn-outline-primary" asp-controller="Catalog" asp-action="Index">
        <i class="bi bi-bag"></i> Continue shopping
    </a>
</div>
