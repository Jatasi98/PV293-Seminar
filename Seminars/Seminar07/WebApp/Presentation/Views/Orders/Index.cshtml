@model IEnumerable<OrderDTO>

@{
    Layout = "_Layout";
    ViewData["Title"] = "My Orders";
}

<div class="d-flex align-items-center justify-content-between mb-3">
    <h1 class="h3 mb-0">My Orders</h1>
    <a class="btn btn-outline-secondary" asp-controller="Catalog" asp-action="Index">
        <i class="bi bi-bag"></i> Continue shopping
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-receipt me-2"></i>
        <div>You have no orders yet.</div>
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Date</th>
                    <th scope="col" class="text-end">Total</th>
                    <th scope="col" class="text-end"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td class="fw-semibold">#@o.Id</td>
                        <td class="text-end">@o.Total.ToString("C")</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@o.Id">
                                <i class="bi bi-eye"></i> Details
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
