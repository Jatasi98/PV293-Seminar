@model ProductDTO
@{
    Layout = "_Layout";
    ViewData["Title"] = Model.Name;
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-controller="Catalog" asp-action="Index">Catalog</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    @if (TempData["CartMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-1"></i> @TempData["CartMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row g-4 align-items-start">
        <div class="col-12 col-md-5 col-lg-4">
            <div class="card shadow-sm">
                <div class="ratio ratio-1x1 bg-light d-flex align-items-center justify-content-center overflow-hidden rounded">
                    <img src="https://placehold.co/400"
                         alt="No image available"
                         class="img-fluid object-fit-cover w-100 h-100 opacity-75" />
                </div>
            </div>
        </div>

        <div class="col-12 col-md-7 col-lg-8">
            <div class="d-flex justify-content-between align-items-start flex-wrap gap-2">
                <h1 class="h3 mb-0">@Model.Name</h1>
            </div>

            <div class="display-6 mt-2">@Model.Price.ToString("C")</div>

            @if (!string.IsNullOrWhiteSpace(Model.Description))
            {
                <p class="text-muted mt-3">@Model.Description</p>
            }

            <form class="mt-3" asp-controller="Cart" asp-action="Add" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.Id" />

                <label for="qty" class="form-label">Quantity</label>
                <div class="input-group mb-3" style="max-width: 220px;">
                    <span class="input-group-text" id="qty-label">
                        <i class="bi bi-plus-slash-minus"></i>
                    </span>
                    <input id="qty" name="qty" type="number" min="1" value="1"
                           class="form-control" aria-describedby="qty-label">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-bag-plus"></i> Add to cart
                    </button>
                </div>
            </form>

            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary" asp-controller="Catalog" asp-action="Index">
                    <i class="bi bi-arrow-left"></i> Back to catalog
                </a>
                <a class="btn btn-outline-dark" asp-controller="Cart" asp-action="Index">
                    <i class="bi bi-bag"></i> Go to cart
                </a>
            </div>
        </div>
    </div>
</div>
