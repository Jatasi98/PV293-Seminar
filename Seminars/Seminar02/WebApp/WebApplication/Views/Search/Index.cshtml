@model WebApplication1.Controllers.SearchViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Search";
}

<div class="container">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h1 class="h3 mb-0">Search results</h1>
        @if (!string.IsNullOrWhiteSpace(Model.Query))
        {
            <span class="text-muted">for “@Model.Query”</span>
        }
    </div>

    @if (!Model.Products.Any() && !Model.Categories.Any())
    {
        <div class="alert alert-info d-flex align-items-center" role="alert">
            <i class="bi bi-search me-2"></i>
            <div>No results found. Try another keyword.</div>
        </div>
        <a class="btn btn-outline-secondary" asp-controller="Catalog" asp-action="Index">
            Back to catalog
        </a>
    }
    else
    {
        <div class="row g-4">
            @if (Model.Categories.Any())
            {
                <div class="col-12">
                    <h2 class="h5 mb-3">Categories</h2>
                    <ul class="list-group">
                        @foreach (var c in Model.Categories)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-start">
                                <div class="ms-0">
                                    <a class="fw-semibold text-decoration-none"
                                       asp-controller="Catalog"
                                       asp-action="Index"
                                       asp-route-CategoryId="@c.Id">
                                        @c.Name
                                    </a>
                                    @if (!string.IsNullOrEmpty(c.Description))
                                    {
                                        <div class="small text-muted mt-1">@c.Description</div>
                                    }
                                </div>
                                <a class="btn btn-sm btn-outline-primary"
                                   asp-controller="Catalog"
                                   asp-action="Index"
                                   asp-route-CategoryId="@c.Id">
                                    View
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            }

            @if (Model.Products.Any())
            {
                <div class="col-12">
                    <h2 class="h5 mb-3">Products</h2>

                    <div class="row g-3">
                        @foreach (var p in Model.Products)
                        {
                            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                                <div class="card h-100 shadow-sm">
                                    <div class="ratio ratio-1x1 bg-light d-flex align-items-center justify-content-center">
                                        <span class="text-muted small">No image</span>
                                    </div>
                                    <div class="card-body d-flex flex-column">
                                        <h3 class="h6 card-title mb-1">
                                            <a class="text-decoration-none"
                                               asp-controller="Product" asp-action="Details" asp-route-id="@p.Id">
                                                @p.Name
                                            </a>
                                        </h3>
                                        <div class="text-muted small mb-2">
                                            @(p.Category?.Name ?? "Uncategorized")
                                        </div>
                                        <div class="fw-semibold mb-2">@p.Price.ToString("C")</div>

                                        @if (!string.IsNullOrEmpty(p.Description))
                                        {
                                            <p class="card-text small text-muted mb-3">
                                                @p.Description
                                            </p>
                                        }

                                        <div class="mt-auto d-flex gap-2">
                                            <a class="btn btn-sm btn-outline-secondary flex-fill"
                                               asp-controller="Product" asp-action="Details" asp-route-id="@p.Id">
                                                Details
                                            </a>
                                            <form class="flex-fill" asp-controller="Cart" asp-action="Add" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@p.Id" />
                                                <input type="hidden" name="qty" value="1" />
                                                <button type="submit" class="btn btn-sm btn-primary w-100">
                                                    <i class="bi bi-bag-plus"></i> Add
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
